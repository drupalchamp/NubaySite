            </tr>
            <?php } ?>
            <?php if(!empty($record->phone)){ ?>
            <?php if(strpos($visibility,'phone') === false){ ?>
            <?php if(!empty($phone_number)){?>
              <tr>
               <td><?php print '<span>Work Phone</span>' ;?></td>
               <td><?php print $phone_number;?></td>
              </tr>
            <?php } ?>
             <?php if(!empty($fax_number)){?>
              <tr>
               <td><?php print '<span>Work Fax</span>' ;?></td>
               <td><?php print $fax_number;?></td>
