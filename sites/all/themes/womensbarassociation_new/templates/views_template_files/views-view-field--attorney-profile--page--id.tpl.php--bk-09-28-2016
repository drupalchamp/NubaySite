           <tr>
          <td><?php print '<span>Job Title</span>' ;?></td>
          <td><?php print $record->job_title ;?></td>
          </tr>
          <?php } ?>
          <?php if(!empty($record->organization_name)){ ?>
           <tr>
          <td><?php print '<span>Organization</span>' ;?></td>
          <td><?php print $record->organization_name ;?></td>
          </tr>

          <?php } ?>
          <?php if(!empty($record->email)){ ?>
            <?php if(strpos($visibility,'email') === false){ ?>
            <tr>
              <td><?php print '<span>Work Email</span>' ;?></td>
              <td><?php print $record->email ;?></td>
            </tr>
            <tr>
             <td>&nbsp;</td>
		     <td>Note: Email addresses are displayed in a non-clickable format as a security measure.</td>
           </tr>
            <?php } ?>
          <?php } ?>
                      <?php if(strpos($visibility,'address') === false){ ?>
            <?php if(!empty($street_address)){ ?>
            <tr>
              <td><?php print '<span>Work Address</span>' ;?></td>
              <td><?php print $street_address;?></td>
            </tr>
            <?php } ?>
             <?php if($city != 'Not Selected'){ ?>
            <tr>
              <td><?php print '<span>City</span>' ;?></td>
              <td><?php print $city;?></td>
            </tr>
            <?php } ?>
             <?php if(!empty($state)){ ?>
            <tr>
              <td><?php print '<span>State/Province</span>' ;?></td>
              <td><?php print $state;?></td>
            </tr>
            <?php } ?>
